---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import Button from '../components/Button.astro';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);

// Sort by date, newest first
const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const featuredPosts = sortedPosts.filter(post => post.data.featured).slice(0, 3);
const recentPosts = sortedPosts.filter(post => !post.data.featured).slice(0, 6);
---

<BaseLayout
  title="Home"
  description="Where curiosity sinks deeper — exploring wonder in technology, nature, spirit, and the quiet moments in between."
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <p class="hero-tagline text-mono">Thoughts from the depths</p>
        <h1 class="hero-title">
          Deep<span class="text-accent">Dive</span>
        </h1>
        <p class="hero-description lead">
          Where curiosity sinks deeper — exploring wonder in technology,
          nature, spirit, and the quiet moments in between.
        </p>
        <div class="hero-actions">
          <Button href="/logbook" variant="primary" size="lg">
            Logbook
          </Button>
          <Button href="/shipyard" variant="primary" size="lg">
            Shipyard
          </Button>
          <Button href="/about" variant="secondary" size="lg">
            About Me
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Posts -->
  {featuredPosts.length > 0 && (
    <section class="section">
      <div class="container">
        <header class="section-header">
          <h2 class="section-title">Featured</h2>
          <div class="section-line"></div>
        </header>
        <div class="posts-grid posts-grid--featured">
          {featuredPosts.map(post => (
            <PostCard
              title={post.data.title}
              description={post.data.description}
              pubDate={post.data.pubDate}
              category={post.data.category}
              slug={post.id}
              heroImage={post.data.heroImage?.src}
              featured={true}
            />
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Recent Posts -->
  <section class="section">
    <div class="container">
      <header class="section-header">
        <h2 class="section-title">Recent Posts</h2>
        <div class="section-line"></div>
      </header>
      {recentPosts.length > 0 ? (
        <div class="posts-grid">
          {recentPosts.map(post => (
            <PostCard
              title={post.data.title}
              description={post.data.description}
              pubDate={post.data.pubDate}
              category={post.data.category}
              slug={post.id}
              heroImage={post.data.heroImage?.src}
            />
          ))}
        </div>
      ) : (
        <p class="empty-state">No posts yet. Check back soon!</p>
      )}
      {sortedPosts.length > 6 && (
        <div class="section-footer">
          <Button href="/logbook" variant="secondary">
            View Logbook
          </Button>
          <Button href="/shipyard" variant="secondary">
            View Shipyard
          </Button>
        </div>
      )}
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    padding: var(--space-3xl) 0;
    text-align: center;
  }

  .hero-content {
    max-width: 700px;
    margin: 0 auto;
  }

  .hero-tagline {
    font-family: var(--font-accent);
    font-size: 1rem;
    font-style: italic;
    letter-spacing: 0.15em;
    color: var(--color-beige);
    margin-bottom: var(--space-sm);
  }

  .hero-title {
    font-family: var(--font-heading);
    font-size: 4.5rem;
    font-weight: 500;
    letter-spacing: -0.01em;
    margin-bottom: var(--space-lg);
  }

  .hero-description {
    color: var(--color-text-muted);
    margin-bottom: var(--space-xl);
  }

  .hero-actions {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  .section {
    padding: var(--space-2xl) 0;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
  }

  .section-title {
    font-family: var(--font-accent);
    font-size: 1rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-beige);
    margin: 0;
    white-space: nowrap;
  }

  .section-line {
    flex: 1;
    height: 1px;
    background: var(--color-grid);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--space-lg);
  }

  .posts-grid--featured {
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  }

  .section-footer {
    margin-top: var(--space-xl);
    text-align: center;
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  .empty-state {
    text-align: center;
    color: var(--color-text-muted);
    font-family: var(--font-accent);
    font-style: italic;
    padding: var(--space-2xl);
    border: 1px dashed var(--color-beige-dark);
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
