---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';
import CategoryBadge from '../../components/CategoryBadge.astro';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);

const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Get unique categories
const categories = [...new Set(allPosts.map(post => post.data.category))].sort();
---

<BaseLayout
  title="Blog"
  description="Browse all posts on robotics, spirituality, nature, technology, cooking, books, mindset, and everyday life."
>
  <div class="container">
    <header class="page-header">
      <p class="page-tagline text-mono">Explore</p>
      <h1 class="page-title">All Posts</h1>
      <p class="page-description">
        {sortedPosts.length} {sortedPosts.length === 1 ? 'post' : 'posts'} across {categories.length} categories
      </p>
    </header>

    <!-- Category Filter -->
    {categories.length > 0 && (
      <nav class="category-filter">
        <span class="filter-label text-mono">Filter by:</span>
        <div class="category-list">
          <a href="/blog" class="filter-all active">All</a>
          {categories.map(category => (
            <CategoryBadge category={category} />
          ))}
        </div>
      </nav>
    )}

    <!-- Posts Grid -->
    {sortedPosts.length > 0 ? (
      <div class="posts-grid">
        {sortedPosts.map(post => (
          <PostCard
            title={post.data.title}
            description={post.data.description}
            pubDate={post.data.pubDate}
            category={post.data.category}
            slug={post.id}
            heroImage={post.data.heroImage?.src}
            featured={post.data.featured}
          />
        ))}
      </div>
    ) : (
      <div class="empty-state">
        <p>No posts yet. Check back soon!</p>
      </div>
    )}
  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .page-tagline {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-accent);
    margin-bottom: var(--space-sm);
  }

  .page-title {
    font-size: 2.5rem;
    margin-bottom: var(--space-sm);
  }

  .page-description {
    color: rgba(241, 245, 249, 0.6);
    font-family: var(--font-mono);
    font-size: 0.875rem;
  }

  .category-filter {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-xl);
    padding: var(--space-md);
    background: rgba(51, 65, 85, 0.1);
    border: 1px solid var(--color-grid);
    flex-wrap: wrap;
  }

  .filter-label {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(241, 245, 249, 0.6);
  }

  .category-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .filter-all {
    font-family: var(--font-mono);
    font-size: 0.625rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: var(--space-xs) var(--space-sm);
    background: transparent;
    border: 1px solid var(--color-grid);
    color: rgba(241, 245, 249, 0.6);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .filter-all:hover,
  .filter-all.active {
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: var(--color-background);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--space-lg);
  }

  .empty-state {
    text-align: center;
    color: rgba(241, 245, 249, 0.6);
    font-family: var(--font-mono);
    padding: var(--space-3xl);
    border: 1px dashed var(--color-grid);
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 2rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }

    .category-filter {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
