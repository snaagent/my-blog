---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';
import Button from '../../components/Button.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog', ({ data }) => !data.draft);
  const categories = [...new Set(allPosts.map(post => post.data.category))];

  return categories.map(category => ({
    params: { category },
    props: {
      posts: allPosts
        .filter(post => post.data.category === category)
        .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()),
    },
  }));
}

const { category } = Astro.params;
const { posts } = Astro.props;

const categoryDisplay = category
  .split('-')
  .map(word => word.charAt(0).toUpperCase() + word.slice(1))
  .join(' ');
---

<BaseLayout
  title={categoryDisplay}
  description={`Browse all posts in the ${categoryDisplay} category.`}
>
  <div class="container">
    <header class="page-header">
      <p class="page-tagline text-mono">Category</p>
      <h1 class="page-title">{categoryDisplay}</h1>
      <p class="page-description">
        {posts.length} {posts.length === 1 ? 'post' : 'posts'}
      </p>
    </header>

    {posts.length > 0 ? (
      <div class="posts-grid">
        {posts.map(post => (
          <PostCard
            title={post.data.title}
            description={post.data.description}
            pubDate={post.data.pubDate}
            category={post.data.category}
            slug={post.id}
            heroImage={post.data.heroImage?.src}
            featured={post.data.featured}
          />
        ))}
      </div>
    ) : (
      <div class="empty-state">
        <p>No posts in this category yet.</p>
      </div>
    )}

    <div class="page-footer">
      <Button href="/blog" variant="secondary">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        All Posts
      </Button>
    </div>
  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .page-tagline {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-accent);
    margin-bottom: var(--space-sm);
  }

  .page-title {
    font-size: 2.5rem;
    margin-bottom: var(--space-sm);
  }

  .page-description {
    color: rgba(241, 245, 249, 0.6);
    font-family: var(--font-mono);
    font-size: 0.875rem;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--space-lg);
  }

  .empty-state {
    text-align: center;
    color: rgba(241, 245, 249, 0.6);
    font-family: var(--font-mono);
    padding: var(--space-3xl);
    border: 1px dashed var(--color-grid);
  }

  .page-footer {
    margin-top: var(--space-2xl);
    text-align: center;
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 2rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
