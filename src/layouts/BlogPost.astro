---
import BaseLayout from './BaseLayout.astro';
import CategoryBadge from '../components/CategoryBadge.astro';
import Button from '../components/Button.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  category: string;
  heroImage?: string;
  videoUrl?: string;
  tags?: string[];
  section?: 'logbook' | 'shipyard';
}

const { title, description, pubDate, category, heroImage, videoUrl, tags, section } = Astro.props;

// Determine section from category if not provided
const effectiveSection = section || (category === 'logbook' ? 'logbook' : category === 'shipyard' ? 'shipyard' : undefined);
const backUrl = effectiveSection ? `/${effectiveSection}` : '/blog';
const backLabel = effectiveSection ? `Back to ${effectiveSection.charAt(0).toUpperCase() + effectiveSection.slice(1)}` : 'Back to Blog';

const formattedDate = pubDate.toLocaleDateString('en-US', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Extract video embed URL
function getEmbedUrl(url: string): string | null {
  if (!url) return null;

  // YouTube
  const ytMatch = url.match(/(?:youtube\.com\/watch\?v=|youtu\.be\/)([^&\s]+)/);
  if (ytMatch) {
    return `https://www.youtube-nocookie.com/embed/${ytMatch[1]}`;
  }

  // Vimeo
  const vimeoMatch = url.match(/vimeo\.com\/(\d+)/);
  if (vimeoMatch) {
    return `https://player.vimeo.com/video/${vimeoMatch[1]}`;
  }

  return null;
}

const embedUrl = videoUrl ? getEmbedUrl(videoUrl) : null;
---

<BaseLayout
  title={title}
  description={description}
  image={heroImage}
  type="article"
  publishedTime={pubDate}
  section={effectiveSection}
>
  <article class="blog-post container container--narrow">
    <header class="post-header">
      <div class="post-meta">
        <CategoryBadge category={category} />
        <time class="date" datetime={pubDate.toISOString()}>{formattedDate}</time>
      </div>
      <h1 class="post-title">{title}</h1>
      <p class="post-description lead">{description}</p>
    </header>

    {heroImage && (
      <figure class="hero-image">
        <img src={heroImage} alt="" />
      </figure>
    )}

    {embedUrl && (
      <div class="video-embed">
        <iframe
          src={embedUrl}
          title={title}
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        ></iframe>
      </div>
    )}

    <div class="post-content prose">
      <slot />
    </div>

    {tags && tags.length > 0 && (
      <footer class="post-footer">
        <div class="tags">
          <span class="tags-label">Tags:</span>
          {tags.map(tag => (
            <span class="tag">#{tag}</span>
          ))}
        </div>
      </footer>
    )}

    <nav class="post-nav">
      <Button href={backUrl} variant="secondary">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        {backLabel}
      </Button>
    </nav>
  </article>
</BaseLayout>

<style>
  .blog-post {
    padding-top: var(--space-xl);
  }

  .post-header {
    margin-bottom: var(--space-2xl);
    text-align: center;
  }

  .post-meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .date {
    font-family: var(--font-accent);
    font-size: 1rem;
    font-style: italic;
    color: var(--color-beige);
  }

  .post-title {
    font-family: var(--font-heading);
    font-size: 3rem;
    font-weight: 500;
    margin-bottom: var(--space-md);
  }

  .post-description {
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto;
  }

  .hero-image {
    margin: 0 0 var(--space-2xl);
  }

  .hero-image img {
    width: 100%;
    border-radius: var(--radius-md);
    border: 1px solid var(--color-grid);
  }

  .video-embed {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    margin-bottom: var(--space-2xl);
    background: var(--color-grid);
    border-radius: var(--radius-md);
    overflow: hidden;
  }

  .video-embed iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  .post-content {
    margin-bottom: var(--space-2xl);
  }

  .post-footer {
    padding: var(--space-lg) 0;
    border-top: 1px solid var(--color-grid);
    margin-bottom: var(--space-xl);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-sm);
  }

  .tags-label {
    font-family: var(--font-accent);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--color-text-muted);
  }

  .tag {
    font-family: var(--font-accent);
    font-size: 0.875rem;
    font-style: italic;
    color: var(--color-beige);
    background: rgba(232, 222, 211, 0.08);
    padding: var(--space-xs) var(--space-sm);
  }

  .post-nav {
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-grid);
  }

  @media (max-width: 768px) {
    .post-title {
      font-size: 1.75rem;
    }
  }
</style>
