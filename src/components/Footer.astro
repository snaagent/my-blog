---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <!-- Seabed transition -->
  <div class="seabed-transition"></div>

  <!-- Rocky bedrock texture -->
  <div class="bedrock">
    <div class="sediment-layer"></div>
    <div class="container footer-content">
      <p class="copyright">
        <span class="text-mono">&copy; {currentYear}</span> Deep Dive. All rights reserved.
      </p>
      <nav class="footer-nav">
        <a href="/rss.xml" class="footer-link">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1Z"/>
          </svg>
          RSS
        </a>
        <a href="https://github.com" class="footer-link" target="_blank" rel="noopener">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33c.85 0 1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2Z"/>
          </svg>
          GitHub
        </a>
      </nav>
    </div>
  </div>
</footer>

<style>
  .footer {
    margin-top: auto;
    position: relative;
  }

  /* Gradient transition from water to seabed - sandy sediment settling */
  .seabed-transition {
    height: 80px;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(30, 25, 20, 0.2) 20%,
      rgba(25, 20, 15, 0.5) 50%,
      rgba(20, 18, 14, 0.8) 75%,
      #1A1612 100%
    );
    position: relative;
  }

  /* Floating sediment particles in transition */
  .seabed-transition::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image:
      radial-gradient(circle 1px at 10% 30%, rgba(180, 160, 140, 0.15) 0%, transparent 100%),
      radial-gradient(circle 1px at 25% 60%, rgba(160, 140, 120, 0.12) 0%, transparent 100%),
      radial-gradient(circle 1px at 40% 20%, rgba(170, 150, 130, 0.1) 0%, transparent 100%),
      radial-gradient(circle 1px at 55% 70%, rgba(150, 130, 110, 0.12) 0%, transparent 100%),
      radial-gradient(circle 1px at 70% 40%, rgba(160, 140, 120, 0.08) 0%, transparent 100%),
      radial-gradient(circle 1px at 85% 55%, rgba(170, 150, 130, 0.1) 0%, transparent 100%);
    pointer-events: none;
  }

  /* Main bedrock area - darker, rocky appearance */
  .bedrock {
    background:
      linear-gradient(
        180deg,
        #1A1612 0%,
        #15120F 20%,
        #120F0C 50%,
        #0E0B09 80%,
        #0A0806 100%
      );
    position: relative;
    padding: var(--space-xl) 0 var(--space-2xl);
    overflow: hidden;
  }

  /* Rocky texture overlay - coarse grain */
  .bedrock::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='rock'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.04' numOctaves='5' stitchTiles='stitch'/%3E%3CfeColorMatrix type='saturate' values='0'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23rock)' opacity='0.15'/%3E%3C/svg%3E");
    opacity: 1;
    pointer-events: none;
    mix-blend-mode: overlay;
  }

  /* Sediment/rock strata layers - horizontal bands */
  .sediment-layer {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 100%;
    background:
      /* Main strata lines */
      repeating-linear-gradient(
        175deg,
        transparent 0px,
        transparent 12px,
        rgba(90, 75, 60, 0.08) 12px,
        rgba(90, 75, 60, 0.08) 14px,
        transparent 14px,
        transparent 25px
      ),
      repeating-linear-gradient(
        183deg,
        transparent 0px,
        transparent 18px,
        rgba(70, 60, 45, 0.06) 18px,
        rgba(70, 60, 45, 0.06) 20px,
        transparent 20px,
        transparent 35px
      ),
      /* Cracks/fissures */
      linear-gradient(92deg, transparent 0%, transparent 15%, rgba(0,0,0,0.1) 15.2%, transparent 15.4%, transparent 100%),
      linear-gradient(88deg, transparent 0%, transparent 45%, rgba(0,0,0,0.08) 45.1%, transparent 45.3%, transparent 100%),
      linear-gradient(91deg, transparent 0%, transparent 72%, rgba(0,0,0,0.12) 72.1%, transparent 72.3%, transparent 100%);
    pointer-events: none;
  }

  /* Rocks and boulders scattered on seafloor */
  .bedrock::after {
    content: '';
    position: absolute;
    inset: 0;
    background-image:
      /* Larger rocks */
      radial-gradient(ellipse 25px 12px at 8% 25%, rgba(45, 40, 35, 0.4) 0%, rgba(35, 30, 25, 0.2) 60%, transparent 100%),
      radial-gradient(ellipse 35px 18px at 92% 70%, rgba(50, 45, 38, 0.35) 0%, rgba(40, 35, 30, 0.15) 60%, transparent 100%),
      radial-gradient(ellipse 20px 10px at 55% 15%, rgba(48, 42, 36, 0.3) 0%, rgba(38, 33, 28, 0.1) 60%, transparent 100%),
      /* Medium rocks */
      radial-gradient(ellipse 15px 8px at 25% 60%, rgba(55, 48, 40, 0.3) 0%, rgba(42, 36, 30, 0.1) 70%, transparent 100%),
      radial-gradient(ellipse 12px 7px at 70% 35%, rgba(52, 45, 38, 0.25) 0%, rgba(40, 35, 28, 0.08) 70%, transparent 100%),
      radial-gradient(ellipse 18px 9px at 38% 80%, rgba(48, 42, 35, 0.3) 0%, rgba(35, 30, 25, 0.1) 70%, transparent 100%),
      /* Small pebbles */
      radial-gradient(ellipse 6px 4px at 15% 45%, rgba(65, 55, 45, 0.25) 0%, transparent 100%),
      radial-gradient(ellipse 5px 3px at 45% 55%, rgba(60, 52, 42, 0.2) 0%, transparent 100%),
      radial-gradient(ellipse 7px 4px at 78% 50%, rgba(58, 50, 40, 0.22) 0%, transparent 100%),
      radial-gradient(ellipse 4px 3px at 62% 85%, rgba(62, 54, 44, 0.18) 0%, transparent 100%),
      radial-gradient(ellipse 5px 3px at 30% 30%, rgba(55, 48, 38, 0.2) 0%, transparent 100%),
      radial-gradient(ellipse 6px 3px at 85% 25%, rgba(58, 50, 42, 0.15) 0%, transparent 100%);
    pointer-events: none;
  }

  .footer-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: var(--space-md);
    position: relative;
    z-index: 1;
  }

  .copyright {
    font-family: var(--font-accent);
    font-size: 0.9rem;
    color: rgba(200, 190, 175, 0.8);
    margin: 0;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.7);
  }

  .footer-nav {
    display: flex;
    gap: var(--space-lg);
  }

  .footer-link {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-family: var(--font-nav);
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: rgba(210, 200, 185, 0.85);
    text-decoration: none;
    transition: color var(--transition-fast);
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.7);
  }

  .footer-link:hover {
    color: var(--color-accent);
  }

  .footer-link svg {
    opacity: 0.9;
  }

  @media (max-width: 640px) {
    .footer-content {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
