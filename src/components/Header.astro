---
const pathname = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'Blog' },
  { href: '/about', label: 'About' },
];

function isActive(href: string): boolean {
  if (href === '/') {
    return pathname === '/';
  }
  return pathname.startsWith(href);
}
---

<header class="header">
  <nav class="nav container">
    <a href="/" class="logo">
      <span class="logo-text">Deep<span class="text-accent">Dive</span></span>
    </a>

    <button class="mobile-toggle" aria-label="Toggle navigation" aria-expanded="false">
      <span class="hamburger"></span>
    </button>

    <ul class="nav-links">
      {navLinks.map(link => (
        <li>
          <a
            href={link.href}
            class:list={['nav-link', { active: isActive(link.href) }]}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>

    <!-- Feed fish toggle -->
    <div class="feed-toggle" title="Toggle fish feeding">
      <label class="toggle-label">
        <input type="checkbox" id="feedToggle" checked />
        <span class="toggle-slider"></span>
        <span class="toggle-icon">üêü</span>
      </label>
    </div>
  </nav>
  <div class="header-line"></div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(11, 18, 33, 0.95);
    backdrop-filter: blur(8px);
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: var(--space-md);
    padding-bottom: var(--space-md);
  }

  .logo {
    text-decoration: none;
  }

  .logo-text {
    font-family: 'Lora', Georgia, serif;
    font-size: 1.6rem;
    font-weight: 700;
    color: var(--color-text);
    letter-spacing: 0.01em;
  }

  .nav-links {
    display: flex;
    gap: var(--space-xl);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nav-link {
    font-family: var(--font-nav);
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-beige);
    text-decoration: none;
    padding: var(--space-sm) 0;
    position: relative;
    transition: color var(--transition-fast);
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-accent);
    transition: width var(--transition-base);
  }

  .nav-link:hover,
  .nav-link.active {
    color: var(--color-accent);
  }

  .nav-link:hover::after,
  .nav-link.active::after {
    width: 100%;
  }

  .header-line {
    height: 1px;
    background: var(--color-accent);
    opacity: 0.8;
  }

  /* Feed toggle styles */
  .feed-toggle {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-left: var(--space-xl);
  }

  .toggle-label {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    cursor: pointer;
    user-select: none;
  }

  .toggle-label input {
    display: none;
  }

  .toggle-slider {
    width: 36px;
    height: 20px;
    background: rgba(100, 100, 100, 0.4);
    border-radius: 10px;
    position: relative;
    transition: background var(--transition-fast);
  }

  .toggle-slider::before {
    content: '';
    position: absolute;
    top: 2px;
    left: 2px;
    width: 16px;
    height: 16px;
    background: var(--color-beige);
    border-radius: 50%;
    transition: transform var(--transition-fast), background var(--transition-fast);
  }

  .toggle-label input:checked + .toggle-slider {
    background: var(--color-accent);
  }

  .toggle-label input:checked + .toggle-slider::before {
    transform: translateX(16px);
    background: var(--color-background);
  }

  .toggle-icon {
    font-size: 1rem;
    opacity: 0.5;
    transition: opacity var(--transition-fast);
  }

  .toggle-label input:checked ~ .toggle-icon {
    opacity: 1;
  }

  .mobile-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--space-sm);
  }

  .hamburger {
    display: block;
    width: 24px;
    height: 2px;
    background: var(--color-text);
    position: relative;
    transition: background var(--transition-fast);
  }

  .hamburger::before,
  .hamburger::after {
    content: '';
    position: absolute;
    width: 24px;
    height: 2px;
    background: var(--color-text);
    left: 0;
    transition: transform var(--transition-base);
  }

  .hamburger::before {
    top: -8px;
  }

  .hamburger::after {
    bottom: -8px;
  }

  @media (max-width: 768px) {
    .nav {
      position: relative;
    }

    .mobile-toggle {
      display: block;
      z-index: 201;
      position: relative;
    }

    .feed-toggle {
      position: absolute;
      right: 60px;
      top: 50%;
      transform: translateY(-50%);
      margin-left: 0;
      z-index: 100;
    }

    .nav-links {
      position: fixed;
      top: 60px;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0);
      backdrop-filter: blur(0px);
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      padding-top: var(--space-xl);
      gap: 0;
      opacity: 0;
      visibility: hidden;
      z-index: 200;
      transition: opacity 0.4s ease, visibility 0.4s ease, background 0.4s ease, backdrop-filter 0.4s ease;
    }

    .nav-links.open {
      opacity: 1;
      visibility: visible;
      background: rgba(0, 0, 0, 0.92);
      backdrop-filter: blur(12px);
    }

    /* Ladder animation for each menu item */
    .nav-links li {
      transform: translateY(-20px);
      opacity: 0;
      transition: transform 0.3s ease, opacity 0.3s ease;
    }

    .nav-links.open li {
      transform: translateY(0);
      opacity: 1;
    }

    .nav-links.open li:nth-child(1) {
      transition-delay: 0.05s;
    }

    .nav-links.open li:nth-child(2) {
      transition-delay: 0.1s;
    }

    .nav-links.open li:nth-child(3) {
      transition-delay: 0.15s;
    }

    /* Menu card */
    .nav-links li {
      background: rgba(15, 23, 42, 0.98);
      padding: 0;
      margin: 0;
      text-align: center;
      width: 260px;
      border-left: 1px solid rgba(249, 115, 22, 0.5);
      border-right: 1px solid rgba(249, 115, 22, 0.5);
      position: relative;
      list-style: none;
    }

    .nav-links li:first-child {
      border-top: 1px solid var(--color-accent);
      border-top-left-radius: 16px;
      border-top-right-radius: 16px;
    }

    .nav-links li:last-child {
      border-bottom: 1px solid var(--color-accent);
      border-bottom-left-radius: 16px;
      border-bottom-right-radius: 16px;
    }

    /* Divider line between items */
    .nav-links li + li::before {
      content: '';
      position: absolute;
      top: 0;
      left: var(--space-xl);
      right: var(--space-xl);
      height: 1px;
      background: rgba(249, 115, 22, 0.25);
    }

    .nav-link {
      font-size: 1.1rem;
      font-weight: 500;
      display: block;
      padding: 1.1rem var(--space-xl);
      transition: background var(--transition-fast);
      letter-spacing: 0.08em;
    }

    .nav-links li:first-child .nav-link {
      border-top-left-radius: 15px;
      border-top-right-radius: 15px;
    }

    .nav-links li:last-child .nav-link {
      border-bottom-left-radius: 15px;
      border-bottom-right-radius: 15px;
    }

    .nav-link:hover,
    .nav-link.active {
      background: rgba(249, 115, 22, 0.12);
    }

    .mobile-toggle[aria-expanded="true"] .hamburger {
      background: transparent;
    }

    .mobile-toggle[aria-expanded="true"] .hamburger::before {
      transform: rotate(45deg) translate(5px, 6px);
    }

    .mobile-toggle[aria-expanded="true"] .hamburger::after {
      transform: rotate(-45deg) translate(5px, -6px);
    }
  }
</style>

<script is:inline>
  // Mobile nav toggle
  const toggle = document.querySelector('.mobile-toggle');
  const navLinks = document.querySelector('.nav-links');

  function closeMenu() {
    toggle?.setAttribute('aria-expanded', 'false');
    navLinks?.classList.remove('open');
  }

  function openMenu() {
    toggle?.setAttribute('aria-expanded', 'true');
    navLinks?.classList.add('open');
  }

  toggle?.addEventListener('click', () => {
    const expanded = toggle.getAttribute('aria-expanded') === 'true';
    if (expanded) {
      closeMenu();
    } else {
      openMenu();
    }
  });

  // Close menu when a nav link is clicked
  document.querySelectorAll('.nav-link').forEach(function(link) {
    link.addEventListener('click', closeMenu);
  });

  // Fish feed toggle
  const feedToggle = document.getElementById('feedToggle');

  // Load saved state from localStorage
  const savedFeedState = localStorage.getItem('fishFeedEnabled');
  if (savedFeedState !== null) {
    feedToggle.checked = savedFeedState === 'true';
  }

  // Expose state globally for SeaCreatures to access
  window.fishFeedEnabled = feedToggle.checked;

  feedToggle?.addEventListener('change', function() {
    window.fishFeedEnabled = this.checked;
    localStorage.setItem('fishFeedEnabled', String(this.checked));
  });
</script>
