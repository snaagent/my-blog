---
import CategoryBadge from './CategoryBadge.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  category: string;
  slug: string;
  heroImage?: string;
  featured?: boolean;
}

const { title, description, pubDate, category, slug, heroImage, featured } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<article class:list={['post-card', { featured }]}>
  <a href={`/blog/${slug}`} class="card-link">
    {heroImage && (
      <div class="card-image">
        <img src={heroImage} alt="" loading="lazy" />
      </div>
    )}
    <div class="card-content">
      <div class="card-meta">
        <CategoryBadge category={category} />
        <time class="date" datetime={pubDate.toISOString()}>{formattedDate}</time>
      </div>
      <h3 class="card-title">{title}</h3>
      <p class="card-description">{description}</p>
      <span class="read-more">
        Read more
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </span>
    </div>
  </a>
</article>

<style>
  .post-card {
    background: rgba(51, 65, 85, 0.1);
    border: 1px solid var(--color-grid);
    border-radius: var(--radius-md);
    overflow: hidden;
    transition: border-color var(--transition-base), box-shadow var(--transition-base);
    position: relative;
  }

  /* Dot-grid pattern overlay for cards */
  .post-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg width='20' height='20' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='2' cy='2' r='1' fill='%23334155' fill-opacity='0.3'/%3E%3C/svg%3E");
    background-size: 20px 20px;
    opacity: 0;
    transition: opacity var(--transition-base);
    pointer-events: none;
  }

  .post-card:hover {
    border-color: var(--color-accent);
    box-shadow: 0 4px 20px rgba(154, 52, 18, 0.2);
  }

  .post-card:hover::before {
    opacity: 1;
  }

  .post-card.featured {
    border-color: var(--color-accent);
    border-width: 2px;
  }

  .card-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .card-image {
    aspect-ratio: 16/9;
    overflow: hidden;
    background: var(--color-grid);
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-base);
  }

  .post-card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-content {
    padding: var(--space-lg);
    position: relative;
    z-index: 1;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-sm);
  }

  .date {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: rgba(241, 245, 249, 0.6);
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: var(--space-sm);
    color: var(--color-text);
    transition: color var(--transition-fast);
  }

  .post-card:hover .card-title {
    color: var(--color-accent);
  }

  .card-description {
    font-size: 0.875rem;
    color: rgba(241, 245, 249, 0.7);
    line-height: 1.6;
    margin-bottom: var(--space-md);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-family: var(--font-mono);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-accent);
  }

  .read-more svg {
    transition: transform var(--transition-fast);
  }

  .post-card:hover .read-more svg {
    transform: translateX(4px);
  }
</style>
